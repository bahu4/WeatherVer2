    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_city_list"
        android:name="com.example.weatherver2.ui.CityListFragment"
        android:label="@string/menu_city_list"
        tools:layout="@layout/fragment_city_list" />
    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.weatherver2.ui.StartFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_start"/>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.weatherver2.ui.WeatherFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_weather" />

    <fragment
